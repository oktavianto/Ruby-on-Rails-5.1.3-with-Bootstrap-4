<br>
<h1>Editing Book</h1>
<br>
<div class="card">
	<div class="card-body">
		<%= form_tag(@book, { :method => "patch" }) do %>
		<div class="form-group">
			<label>Title</label>
			<%= text_field(:book, :title, value: @book.title,class: "form-control") %>
		</div>
		<div class="form-group">
			<label>Description</label>
			<textarea rows="10" class="form-control" id="book_desc" name="book[desc]"><%= @book.desc %></textarea>
		</div>
		<%= link_to icon('arrow-left', 'Back'), books_path, class: 'btn btn-info' %>
		<%= link_to icon('eye', 'Show'), @book, class: 'btn btn-info' %>
		<button type="submit" class="btn btn-primary"><%= icon('pencil', 'Edit') %></button>
		<% end %>
	</div>
</div>