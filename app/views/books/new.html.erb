<br>
<h1>New Book</h1>
<br>
<div class="card">
	<div class="card-body">
		<%= form_for @book, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
		<div class="form-group">
			<label>Title</label>
			<%= text_field(:book, :title, class: "form-control") %>
		</div>
		<div class="form-group">
			<label>Description</label>
			<textarea rows="10" class="form-control" id="book_desc" name="book[desc]"></textarea>
		</div>
		<%= link_to icon('arrow-left', 'Back'), books_path, class: 'btn btn-info' %>
		<button type="submit" class="btn btn-primary"><%= icon('plus', 'Add new') %></button>
		<% end %>
	</div>
</div>