<br>
<h1>Books</h1>
<p id="notice"><%= notice %></p>
<div class="card card-primary">
  <div class="card-block">
    <table class="table table-responsive table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.desc %></td>
          <td><%= link_to icon('eye'), book, class: 'btn btn-primary' %></td>
          <td><%= link_to icon('pencil'), edit_book_path(book), class: 'btn btn-primary' %></td>
          <td><%= link_to icon('trash'), book, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= link_to icon('plus', 'New Book'), new_book_path, class: 'btn btn-primary' %>
  </div>
</div>